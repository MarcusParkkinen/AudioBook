<!--
				XML File that defines the pattern of background that represents progress
				on a seekbar1 in our UI
-->

<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <clip>
            <shape>
                <gradient
                    android:angle="270"
                    android:centerColor="#123412"
                    android:centerY="0.1"
                    android:endColor="#abdef0"
                    android:startColor="#00ffff" />
            </shape>
        </clip>
    </item>
    <item>
        <clip>
            <bitmap
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:antialias="true"
                android:dither="false"
                android:filter="false"
                android:gravity="left"
                android:src="@drawable/sb_track_bar_progress"
                android:tileMode="repeat" />
        </clip>
    </item>

</layer-list>