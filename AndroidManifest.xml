<?xml version="1.0" encoding="UTF-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.chalmers.dat255.audiobookplayer"
    android:versionCode="1"
    android:versionName="1.0" >

    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:label="@string/app_name"
        android:targetPackage="edu.chalmers.dat255.audiobookplayer" />

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="16" />

    <application>
        <uses-library android:name="android.test.runner" />

        <activity
            android:name=".view.MainActivity"
            android:label="@string/title_activity_audiobook"
            android:theme="@style/ThemeWithoutActionbar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
             android:screenOrientation="portrait"
            android:name=".view.BrowserActivity"
            android:label="@string/title_activity_browser"
            android:screenOrientation="portrait"
            android:theme="@style/ThemeWithoutActionbar" >
        </activity>
        <activity
            android:name=".view.PreferencesActivity"
            android:label="@string/title_activity_preferences" >
        </activity>
    </application>

</manifest>
